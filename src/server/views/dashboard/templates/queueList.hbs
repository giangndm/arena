<h2>Queues</h2>
<h3>Overview</h3>

<div class="no-padding">
  <table id="queueList" class="table">
    <thead>
      <th>Host</th>
      <th>Name</th>
      <th>Stats</th>
    </thead>
    <tbody>
      {{#each queues}}
        <tr>
          <td>{{ this.hostId }}</td>
          <td><a href="{{ ../basePath }}/{{ encodeURI this.hostId }}/{{ encodeURI this.name }}">{{ this.name }}/</a></td>
          <td>waiting:{{ this.waiting }} active:{{ this.active }} completed:{{ this.completed }} failed:{{ this.failed }} delayed:{{ this.delayed }}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{#contentFor 'sidebar'}}
  <li class="active"><a href="#">Queues Overview</a></li>
{{/contentFor}}

{{#contentFor 'script'}}
  new Tablesort(document.getElementById('queueList'));
{{/contentFor}}
